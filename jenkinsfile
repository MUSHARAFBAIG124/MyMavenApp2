pipeline {
    agent any

    tools {
        maven 'maven' // Make sure 'maven' is configured in Jenkins -> Global Tool Configuration
        jdk 'jdk11'   // Replace with your configured JDK name
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/MUSHARAFBAIG124/MyMavenApp2.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Run Application') {
            steps {
                // Match the actual jar name from the Maven build logs
                sh 'java -jar target/MyMavenApp-1.0-SNAPSHOT.jar'
            }
        }
    }

    post {
        failure {
            echo 'Build failed!'
        }
        success {
            echo 'Build succeeded!'
        }
    }
}

